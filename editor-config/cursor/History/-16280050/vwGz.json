// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+k v",
        "command": "-markdown.showPreviewToSide",
        "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    { "key": "ctrl+e", "command": "-workbench.action.quickOpen" },

    // Close sidebar
    { "key": "ctrl+b", "command": "workbench.action.toggleSidebarVisibility" },

    // Focus current file in files explorer
    { "key": "ctrl+m", "command": "workbench.files.action.focusFilesExplorer", "when": "editorTextFocus" },

    /* TERMINAL STUFF */
    // Toggle betwen terminal and editor
    { "key": "ctrl+`", "command": "workbench.action.terminal.focus" },
    { "key": "ctrl+`", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
    // { "key": "ctrl+1", "command": "workbench.action.terminal.focus" },
    // { "key": "ctrl+1", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
    { "key": "ctrl+shift+`", "command": "workbench.action.closePanel" },
    // NOTE: oem_5 stands for backslash
    { "key": "ctrl+oem_5", "command": "workbench.action.terminal.focus" },
    { "key": "ctrl+oem_5", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
    // { "key": "ctrl+2", "command": "workbench.action.terminal.focus" },
    // { "key": "ctrl+2", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
    { "key": "ctrl+shift+oem_5", "command": "workbench.action.closePanel" },
    { "key": "ctrl+shift+1", "command": "workbench.action.closePanel" },
    { "key": "ctrl+enter", "command": "workbench.action.terminal.focus" },
    { "key": "ctrl+enter", "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus" },
    { "key": "ctrl+shift+enter", "command": "workbench.action.closePanel" },

    // Bottom Panel
    { "key": "ctrl+shift+`", "command": "workbench.action.togglePanel" },
    { "key": "ctrl+shift+`", "command": "workbench.action.togglePanel" },
    { "key": "ctrl+shift+oem_5", "command": "workbench.action.togglePanel" },
    { "key": "ctrl+shift+1", "command": "workbench.action.togglePanel" },
    { "key": "ctrl+x", "command": "workbench.action.toggleMaximizedPanel" },

    // Auxiliary Bar
    { "key": "ctrl+shift+3", "command": "workbench.action.toggleAuxiliaryBar" },

    // Navigate terminal tabs
    { "key": "ctrl+tab", "command": "workbench.action.terminal.focusNext", "when": "terminalFocus" },
    { "key": "ctrl+shift+tab", "command": "workbench.action.terminal.focusPrevious", "when": "terminalFocus" },

    // Split terminal vertically
    { "key": "ctrl+shift+5", "command": "-workbench.action.terminal.splitInstance", "when": "terminalProcessSupported && terminalTabsFocus" },
    { "key": "ctrl+shift+5", "command": "-workbench.action.terminal.split", "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile" },
    { "key": "ctrl+shift+e", "command": "workbench.action.terminal.splitInstance", "when": "terminalFocus" },
    { "key": "ctrl+shift+e", "command": "workbench.action.terminal.split", "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile" },

    // Focus next split pane
    { "key": "alt+l", "command": "workbench.action.terminal.focusNextPane", "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported" },
    { "key": "alt+down", "command": "-workbench.action.terminal.focusNextPane", "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported" },
    { "key": "alt+right", "command": "-workbench.action.terminal.focusNextPane", "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported" },

    // Focus prev split pane
    { "key": "alt+h", "command": "workbench.action.terminal.focusPreviousPane", "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported" },
    {
        "key": "alt+up",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "f3",
        "command": "-workbench.action.terminal.findNext",
        "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "f3",
        "command": "-editor.action.nextMatchFindAction",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "ctrl+oem_5",
        "command": "-workbench.action.splitEditor"
    },
    {
        "key": "ctrl+shift+v",
        "command": "workbench.action.terminal.paste",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+v",
        "command": "-workbench.action.terminal.paste",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+m",
        "command": "-editor.action.toggleTabFocusMode"
    },
    {
        "key": "ctrl+alt+space",
        "command": "parameterHints.toggle"
    },
    {
        "key": "ctrl+shift+v",
        "command": "-markdown-preview-enhanced.openPreview",
        "when": "editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+shift+v",
        "command": "-markdown.showPreview",
        "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.chat.newEditSession",
        "when": "!terminalFocus &&chatEditingParticipantRegistered && chatIsEnabled && inChat && chatLocation == 'editing-session' acceptSuggestionOnEnter"
    },
    {
        "key": "ctrl+l",
        "command": "-workbench.action.chat.newEditSession",
        "when": "chatEditingParticipantRegistered && chatIsEnabled && inChat && chatLocation == 'editing-session'"
    },
    {
        "key": "ctrl+oem_period",
        "command": "-workbench.action.chat.toggleAgentMode",
        "when": "chatHasToolsAgent && inChatInput && !chatSessionRequestInProgress && chatLocation == 'editing-session'"
    },
    {
        "key": "ctrl+oem_period",
        "command": "-docs.write",
        "when": "false"
    },
    {
        "key": "ctrl+oem_period",
        "command": "-docs.write",
        "when": "editorTextFocus && config.docwriter.hotkey.windows == 'Ctrl + .' && editorLangId =~ /typescript|javascript|python|php|java|c|cpp|csharp|dart|ruby|go|rust/"
    },
]